<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#47C3BF"
    android:backgroundTint="#FFFFFF"
    tools:context=".SplashScreen">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_movie"
        android:layout_width="372dp"
        android:layout_height="610dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#B83434"
        app:layout_constraintBottom_toTopOf="@+id/add_movie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/list_movie" />

    <ImageView
        android:id="@+id/add_movie"
        android:layout_width="86dp"
        android:layout_height="83dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/plus__1_" />

    <ImageView
        android:id="@+id/leftarrow"
        android:layout_width="55dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_movie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/arrow_left"
        android:clickable="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>